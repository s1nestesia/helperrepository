<div class="posts">
  <% if @posts.exists? %>
    <% @posts.each do |post| %>
      <section class="post">
        <div class="username">
          <%= link_to(post.user_name, user_path(@user)) %>
        </div>  
        <%= image_tag post.image_url, class: 'main-image' %>
        <div class="description">
          <p><strong>
            <%= Like.where(post_id: post).count %> likes
          </strong></p><br>
          <%= post.description %>
        </div>
        <%= link_to 'Show', user_post_path(@user, post) %>
        <% if @user.id == current_user.id %>
            <%= link_to 'Edit', edit_user_post_path(@user, post) %>
            <%= link_to 'Destroy', user_post_path(@user, post), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
      </section>
    <% end %>
  <% end %> 
<%= link_to 'Back', user_path(@user) %>
</div> 
